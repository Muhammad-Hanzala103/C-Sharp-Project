@model Hostel.Web.Controllers.DashboardViewModel
@{
    ViewData["Title"] = "Hostel Dashboard";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Hostel Management Dashboard</h1>
        <a asp-controller="Auth" asp-action="Logout" class="btn btn-outline-light btn-sm">Logout</a>
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card text-bg-primary">
                <div class="card-body">
                    <h5 class="card-title">Students</h5>
                    <p class="display-6">@Model.TotalStudents</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-bg-success">
                <div class="card-body">
                    <h5 class="card-title">Rooms</h5>
                    <p class="display-6">@Model.TotalRooms</p>
                    <small>@Model.OccupiedRooms occupied</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-bg-warning">
                <div class="card-body">
                    <h5 class="card-title">Open Complaints</h5>
                    <p class="display-6">@Model.OpenComplaints</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-bg-info">
                <div class="card-body">
                    <h5 class="card-title">Total Revenue</h5>
                    <p class="display-6">@Model.TotalRevenue.ToString("C")</p>
                </div>
            </div>
        </div>
    </div>

    <p class="text-muted">
        Use the console app for data entry (students, rooms, payments, complaints), then refresh this dashboard to see updated stats.
    </p>
</div>

